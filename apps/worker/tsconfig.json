{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": false,
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": [
    "src",
    "../../packages/db/src"
  ]
}
